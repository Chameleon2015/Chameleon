<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.chameleonbuilds" name="Chameleon Builds" version="1.0.5" provider-name="Chameleon-Builds">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.addon.common" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Chameleon-Builds</summary>
    <description lang="en">Easy Way To Install Your Chameleon build!</description>
    <platform>all</platform>
  </extension>
</addon>

    <addon id="repository.Chameleon" name="Chameleon Repo" version="1.0.1" provider-name="Chameleon">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Chameleon Repo">
            <info compressed="false">https://raw.github.com/Chameleon2015/chameleon/master/_repo/addons.xml</info>
            <checksum>https://raw.github.com/Chameleon2015/chameleon/master/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.github.com/Chameleon2015/chameleon/master/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Chameleon</summary>
            <description>Chameleon</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
